{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "sourceMap": true,
        "lib": [
            "dom",
            "es5"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "webpack",
        "**/__tests__"
    ]
}